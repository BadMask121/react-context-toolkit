  "compilerOptions": {
    "target": "ES5",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "lib": ["ES2020"],
    "sourceMap": true,
    "module": "CommonJS"
